{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@libs/*": [
        "./src/libs/*"
      ],
      "@src/*": [
        "./src/*"
      ]
    },
    "sourceMap": true,
    "target": "es6",
    "types": ["node", "express"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/express"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}